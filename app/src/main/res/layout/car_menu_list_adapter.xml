<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="37dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/factory"
        android:layout_width="100dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/nameContent"
        android:layout_width="157dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="0dp"
        android:text=""
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/factoryContent"
        android:layout_width="160dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/nameContent"
        android:layout_alignBottom="@+id/factory"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/love"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/factory"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:src="@drawable/your_fav"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/carMenuListReserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/love"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="6dp"
        android:background="@color/white"
        app:srcCompat="@drawable/un_reserved"
        tools:ignore="VectorDrawableCompat" />

</RelativeLayout>